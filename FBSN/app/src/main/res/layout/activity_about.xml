<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_version_label"
        android:textSize="@dimen/fragment_text_size"
        android:text="@string/about_version"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_version_text"
        android:textSize="@dimen/fragment_text_size"
        android:textStyle="bold"
        android:paddingTop="@dimen/fragment_padding"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/about_version_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_info"
        android:textSize="@dimen/fragment_text_size"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:linksClickable="true"
        android:text="@string/about_info"
        android:layout_below="@id/about_version_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_last_update_build_label"
        android:textSize="@dimen/fragment_text_size"
        android:text="@string/about_last_update_build_label"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/about_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_last_update_build_text"
        android:textSize="@dimen/fragment_text_size"
        android:textStyle="bold"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/about_last_update_build_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_last_update_running_label"
        android:textSize="@dimen/fragment_text_size"
        android:text="@string/about_last_update_running_label"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/about_last_update_build_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/about_last_update_running_text"
        android:textSize="@dimen/fragment_text_size"
        android:textStyle="bold"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/about_last_update_running_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>