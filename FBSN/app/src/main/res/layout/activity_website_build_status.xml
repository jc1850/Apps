<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/website_build_status_info"
        android:textSize="@dimen/fragment_text_size"
        android:text="@string/website_build_status_info"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/website_build_status_start_timestamp_label"
        android:textSize="@dimen/fragment_text_size"
        android:text="@string/website_build_status_start_label"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/website_build_status_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/website_build_status_start_timestamp_text"
        android:text="@string/website_build_status_loading"
        android:textSize="@dimen/fragment_text_size"
        android:textStyle="bold"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/website_build_status_start_timestamp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/website_build_status_end_timestamp_label"
        android:textSize="@dimen/fragment_text_size"
        android:text="@string/website_build_status_end_label"
        android:paddingTop="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/website_build_status_start_timestamp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/website_build_status_end_timestamp_text"
        android:text="@string/website_build_status_loading"
        android:textSize="@dimen/fragment_text_size"
        android:textStyle="bold"
        android:paddingStart="@dimen/fragment_padding"
        android:paddingEnd="@dimen/fragment_padding"
        android:layout_below="@id/website_build_status_end_timestamp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>