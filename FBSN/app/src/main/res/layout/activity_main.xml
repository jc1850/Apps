<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.storchp.fdroidbuildstatus.MainActivity"
    tools:showIn="@layout/activity_main">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"
        android:visibility="gone" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@+id/progressBar"
        android:layout_above="@+id/chipScrollView">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/build_list"
            android:scrollX="0px"
            android:scrollY="0px"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="15dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <HorizontalScrollView
        android:id="@+id/chipScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents"
                app:chipSurfaceColor="@color/fullTransparent"
                app:chipStrokeColor="@color/colorForeground"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
                app:closeIconEnabled="true"
                android:text="@string/bottom_bar_running" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents"
                app:chipSurfaceColor="@color/fullTransparent"
                app:chipStrokeColor="@color/colorForeground"
                app:chipStrokeWidth="1dp"
                app:closeIcon="@drawable/ic_baseline_arrow_drop_up_24"
                app:closeIconEnabled="true"
                android:text="@string/bottom_bar_success" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents"
                app:chipSurfaceColor="@color/fullTransparent"
                app:chipStrokeColor="@color/colorForeground"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@drawable/bg_chip_state_list"
                app:checkedIcon="@drawable/ic_favourite_24px"
                android:checkable="true"
                android:text="@string/bottom_bar_favorite" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</RelativeLayout>

